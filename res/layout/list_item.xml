<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:background="@color/list_orange_default"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/tvListNoteName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:minLines="1"
        android:text="Example Heading"
        android:textColor="@color/white_green"
        android:textColorHint="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tvListNoteLine"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_weight="0.75"
        android:maxLines="2"
        android:minLines="1"        
        android:text="Description"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvListId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:text="ID"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvListTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.11"
            android:gravity="right|center_vertical"
            android:paddingTop="2dp"
            android:text="Timestamp"
            android:textColor="#000000"
            android:textSize="10sp"
            android:width="100dp" />
    </LinearLayout>

</LinearLayout>